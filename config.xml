<?xml version='1.0' encoding='utf-8'?>
<widget id="com.audubon.app" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Audubon App</name>
    <description>
        An app that displays Exhibit information for Audubon Pascagoula
    </description>
    <author email="rolando@ad-in.us" href="http://ad-in.us">
        Ad.In Advertising
    </author>
    <content src="index.html" />
	
	<plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
	<plugin name="cordova-plugin-network-information" spec="~1.3.3" />
	<plugin name="cordova-plugin-splashscreen" spec="4.0.3"/>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>	
	
    <platform name="android">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>		
	
  <!-- Assign Icons and Splash-->
  <icon src="icon.png" /><!-- Default -->
  <splash src="splash.png" /><!-- Default -->
  
	<icon src="icon/Icon.png" platform="ios" width="57" height="57" />
	<icon src="icon/Icon@2x.png" platform="ios" width="114" height="114" />
	<icon src="icon/Icon-40.png" platform="ios" width="40" height="40" />
	<icon src="icon/Icon-40@2x.png" platform="ios" width="80" height="80" />
	<icon src="icon/Icon-50.png" platform="ios" width="50" height="50" />
	<icon src="icon/Icon-50@2x.png" platform="ios" width="100" height="100" />
	<icon src="icon/Icon-60.png" platform="ios" width="60" height="60" />
	<icon src="icon/Icon-60@2x.png" platform="ios" width="120" height="120" />
	<icon src="icon/Icon-60@3x.png" platform="ios" width="180" height="180" />
	<icon src="icon/Icon-72.png" platform="ios" width="72" height="72" />
	<icon src="icon/Icon-72@2x.png" platform="ios" width="144" height="144" />
	<icon src="icon/Icon-76.png" platform="ios" width="76" height="76" />
	<icon src="icon/Icon-76@2x.png" platform="ios" width="152" height="152" />
	<icon src="icon/Icon-167.png" platform="ios" width="167" height="167" />
	<icon src="icon/Icon-small.png" platform="ios" width="29" height="29" />
	<icon src="icon/Icon-small@2x.png" platform="ios" width="58" height="58" />
	<icon src="icon/Icon-small@3x.png" platform="ios" width="87" height="87" />

	<splash src="splash/Default.png" platform="ios" width="480" height="800" />
	<splash src="splash/Default~iphone.png" platform="ios" width="320" height="480" />
	<splash src="splash/Default~ipad.png" platform="ios" width="480" height="800" />
	<splash src="splash/Default@2x~iphone_640x960.png" platform="ios" width="640" height="960" />
	<splash src="splash/Default-568h@2x~iphone_640x1136.png" platform="ios" width="640" height="1136" />
	<splash src="splash/Default-750@2x~iphone6-landscape_1334x750.png" platform="ios" width="1334" height="750" />
	<splash src="splash/Default-750@2x~iphone6-portrait_750x1334.png" platform="ios" width="750" height="1334" />
	<splash src="splash/Default-1242@3x~iphone6s-landscape_2208x1242.png" platform="ios" width="2208" height="1242" />
	<splash src="splash/Default-1242@3x~iphone6s-portrait_1242x2208.png" platform="ios" width="1242" height="2208" />
	<splash src="splash/Default-Landscape@2x~ipad_2048x1496.png" platform="ios" width="2048" height="1496" />
	<splash src="splash/Default-Landscape@2x~ipad_2048x1536.png" platform="ios" width="2048" height="1536" />
